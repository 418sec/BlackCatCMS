<div id="fc_content_header">
	{$HEADING.ADMINISTRATION_TOOLS}
</div>
<div id="fc_main_content" class="c_16">
	<ul id="fc_admintools">
		{foreach $tools as tool}
		<li {if $tool.ICON} style="background-image: url({$tool.ICON});"{/if}>
			<a href="{$ADMIN_URL}/admintools/tool.php?tool={$tool.TOOL_DIR}">
				<span class="fc_admintool_title">{$tool.TOOL_NAME}</span>
			</a>
			<div class="fc_admintool_description">{$tool.TOOL_DESCRIPTION}</div>
		</li>
		{/foreach}
	</ul>
</div>
