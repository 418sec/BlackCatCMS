<div id="fc_content_header">
	{translate('Settings')}
</div>

<div id="fc_main_content" class="c_16">
<div class="clear sp_clear"></div>
<form name="settings" action="{$ADMIN_URL}/settings/save.php" method="post" class="ajaxForm">
	<div id="fc_lists_overview" class="g_4 ui-corner-top">
		<div id="fc_list_search" class="ui-corner-top">
			<div class="fc_input_fake">
				<input type="text" name="fc_list_search" id="fc_list_search_input" value="{translate('Search')}" />
				<label class="fc_close" for="fc_list_search_input"></label>
			</div>
		</div>
		<ul id="fc_list_overview" class="fc_group_list fc_settings_list">
			<li class="fc_setting_item fc_seo_item" rel="fc_SEO">
				<span class="fc_groups_name">{translate('SEO settings')}</span>
			</li>
			<li class="fc_setting_item fc_frontend_item" rel="fc_FRONTEND">
				<span class="fc_groups_name">{translate('Frontend settings')}</span>
			</li>
			<li class="fc_setting_item fc_backend_item" rel="fc_BACKEND">
				<span class="fc_groups_name">{translate('Backend settings')}</span>
			</li>
			<li class="fc_setting_item fc_system_item" rel="fc_SYSTEM">
				<span class="fc_groups_name">{translate('System settings')}</span>
			</li>
			<li class="fc_setting_item fc_lists_item" rel="fc_list">
				<span class="fc_groups_name">{translate('User settings')}</span>
			</li>
			<li class="fc_setting_item fc_time_language_item" rel="fc_TIME_LANGUAGE">
				<span class="fc_groups_name">{translate('Language & time')}</span>
			</li>
			<li class="fc_setting_item fc_searching_item" rel="fc_SEARCHING">
				<span class="fc_groups_name">{translate('Search settings')}</span>
			</li>
			<li class="fc_setting_item fc_server_item" rel="fc_SERVER">
				<span class="fc_groups_name">{translate('Server settings')}</span>
			</li>
			<li class="fc_setting_item fc_mail_item" rel="fc_MAIL">
				<span class="fc_groups_name">{translate('Mailer settings')}</span>
			</li>
		</ul>
	</div>
	<div class="g_12 fc_all_forms">
		<div id="fc_SEO" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_website_title" class="g_6">{translate('Website title')}:</label>
			<input type="text" name="website_title" id="fc_website_title" class="g_9"  value="{$values.website_title}" />
			<div class="clear sp_clear"></div>

			<label for="fc_website_description" class="g_6">{translate('Website description')}:</label>
			<textarea name="website_description" id="fc_website_description" class="g_9" cols="80" rows="6" >{$values.website_description}</textarea>
			<div class="clear"></div>
			<hr/>
			<label for="fc_website_keywords" class="g_6">{translate('Website keywords')}:</label>
			<textarea name="website_keywords" id="fc_website_keywords" class="g_9" cols="80" rows="6" >{$values.website_keywords}</textarea>
			<div class="clear sp_clear"></div>
		</div>

		<div id="fc_FRONTEND" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_default_template" class="g_6">{translate('Template')}:</label>
			<select class="g_7" name="default_template" id="fc_default_template">
				{foreach $templates template}
				<option value="{$template.VALUE}"{if $template.SELECTED} selected="selected"{/if}>{$template.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_website_header" class="g_6">{translate('Website header')}:</label>
			<textarea name="website_header" id="fc_website_header" class="g_9" cols="80" rows="6" >{$values.website_header}</textarea>
			<div class="clear sp_clear"></div>

			<label for="fc_website_footer" class="g_6">{translate('Website footer')}:</label>
			<textarea name="website_footer" id="fc_website_footer" class="g_9" cols="80" rows="6" >{$values.website_footer}</textarea>
			<div class="clear sp_clear"></div>
		</div>


		<div id="fc_BACKEND" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_default_template" class="g_6">{translate('Backend theme')}:</label>
			<select class="g_7" name="default_theme" id="fc_default_theme">
				{foreach $backends backend}
				<option value="{$backend.VALUE}"{if $backend.SELECTED} selected="selected"{/if}>{$backend.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_wysiwyg_editor" class="g_6">{translate('WYSIWYG Editor')}:</label>
			<select class="g_6" name="wysiwyg_editor" id="fc_wysiwyg_editor">
				{foreach $wysiwyg module}
				<option value="{$module.VALUE}"{if $module.SELECTED} selected="selected"{/if}>{$module.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			{if $DISPLAY_ADVANCED}
			<label for="fc_er_level" class="g_6">{translate('PHP Error Reporting Level')}:</label>
			<select class="g_6" name="er_level" id="fc_er_level">
				<option value="">{translate('Please select')}...</option>
				{foreach $er_levels er}
				<option value="{$er.VALUE}"{if $er.SELECTED} selected="selected"{/if}>{$er.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_redirect_timer" class="g_6">{translate('Redirect after')}:</label>
			<input type="text" name="redirect_timer" id="fc_redirect_timer" class="g_6"  value="{$values.redirect_timer}" />ms
			<div class="clear sp_clear"></div>

			<label for="fc_leptoken_lifetime" class="g_6">{translate('Leptoken lifetime')}:</label>
			<input type="text" name="leptoken_lifetime" id="fc_leptoken_lifetime" class="g_6"  value="{$values.leptoken_lifetime}" /> s
			<p class="g_7">
				{translate('0 means no CSRF protection!')}
			</p>
			<div class="clear sp_clear"></div>

			<label for="fc_max_attempts" class="g_6">{translate('Allowed wrong login attempts')}:</label>
			<input type="text" name="max_attempts" id="fc_max_attempts" class="g_6"  value="{$values.max_attempts}" />
			<p class="g_7">
				{translate('When reaching this number, more login attempts are not possible for this session.')}
			</p>
			<div class="clear sp_clear"></div>
			{else}
				<input type="hidden" name="er_level" value="{$ER_LEVEL}" />
				<input type="hidden" name="redirect_timer" value="{$values.redirect_timer}" />
				<input type="hidden" name="leptoken_lifetime" value="{$values.leptoken_lifetime}" />
				<input type="hidden" name="max_attempts" value="{$values.max_attempts}" />
			{/if}
		</div>


		<div id="fc_SYSTEM" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			{if $DISPLAY_ADVANCED}
			<label for="fc_page_level_limit" class="g_6">{translate('Page level limit')}:</label>
			<select class="g_6" name="page_level_limit" id="fc_page_level_limit">
				{for count 0 10 1}
				<option value="{$count}"{if $count == $PAGE_LEVEL_LIMIT} selected="selected"{/if}>{$count}</option>
				{/for}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_page_trash" class="g_6">{translate('Page trash')}:</label>
			<div class="fc_settings_label g_9" id="fc_page_trash">
				<label for="fc_page_trash_disabled">{translate('Disabled')}</label>
				<input type="radio" class="fc_radio_jq" name="page_trash" id="fc_page_trash_disabled" value="disabled"{if $PAGE_TRASH == 'disabled'} checked="checked"{/if}/>
				<label for="fc_page_trash_inline">{translate('Inline')}</label>
				<input type="radio" class="fc_radio_jq" name="page_trash" id="fc_page_trash_inline" value="inline"{if $PAGE_TRASH == 'inline'} checked="checked"{/if}/>
				{if $PAGE_TRASH == 'separate'}
				<label for="fc_page_trash_separate">{translate('Separate')}</label>
				<input type="radio" class="fc_radio_jq" name="page_trash" id="fc_page_trash_separate" value="separate"{if $PAGE_TRASH == 'separate'} checked="checked"{/if}/>
				{/if}
			</div>
			<div class="clear sp_clear"></div>

			<div class="pre_4 g_9">
				<label for="fc_manage_sections">{translate('Manage sections')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="manage_sections" id="fc_manage_sections" value="true" {if $MANAGE_SECTIONS} checked="checked"{/if}/>
			</div>

			<div class="pre_4 g_9">
				<label for="fc_section_blocks">{translate('Sections blocks')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="section_blocks" id="fc_section_blocks" value="true" {if $SECTION_BLOCKS} checked="checked"{/if}/>
			</div>

			<div class="pre_4 g_9">
				<label for="fc_multiple_menus">{translate('Multiple menus')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="multiple_menus" id="fc_multiple_menus" value="true" {if $MULTIPLE_MENUS} checked="checked"{/if}/>
			</div>

			<div class="pre_4 g_9">
				<label for="fc_page_languages">{translate('Page languages')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="page_languages" id="fc_page_languages" value="true" {if $PAGE_LANGUAGES} checked="checked"{/if}/>
			</div>
			{else}
				<input type="hidden" name="page_level_limit" value="{$PAGE_LEVEL_LIMIT}" />
				<input type="hidden" name="page_trash" value="{$PAGE_TRASH}" />
				<input type="hidden" name="manage_sections" value="{$MANAGE_SECTIONS}" />
				<input type="hidden" name="section_blocks" value="{$SECTION_BLOCKS}" />
				<input type="hidden" name="multiple_menus" value="{$MULTIPLE_MENUS}" />
				<input type="hidden" name="page_languages" value="{$PAGE_LANGUAGES}" />
			{/if}

			<div class="pre_4 g_9">
				<label for="fc_intro_page">{translate('Intro page')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="intro_page" id="fc_intro_page" value="true" {if $INTRO_PAGE} checked="checked"{/if}/>
			</div>

			{if $DISPLAY_ADVANCED}
			<div class="pre_4 g_9">
				<label for="fc_homepage_redirection">{translate('Homepage redirection')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="homepage_redirection" id="fc_homepage_redirection" value="true" {if $HOMEPAGE_REDIRECTION} checked="checked"{/if}/>
			</div>
			{else}
				<input type="hidden" name="homepage_redirection" value="{if $HOMEPAGE_REDIRECTION}true{else}false{/if}" />
			{/if}
			<div class="clear sp_clear"></div>
		</div>


		<div id="fc_list" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_frontend_signup" class="g_6">{translate('Signup')}:</label>
			{if !$groups.viewers}
			<div class="g_6" id="fc_frontend_signup">
				{translate('No groups found')}
				<input type="hidden" name="frontend_signup" value="false" />
			</div>
			{else}
			<select class="g_6" name="frontend_signup" id="fc_frontend_signup">
				<option value="false">--- {translate('Disabled')} ---</option>
				{foreach $groups.viewers group}
				<option value="{$group.VALUE}"{if $group.CHECKED} selected="selected"{/if}>{$group.NAME}</option>
				{/foreach}
			</select>
			{/if}
			<div class="clear sp_clear"></div>

			<div class="pre_4 g_9">
				<label for="fc_frontend_login">{translate('Login')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="frontend_login" id="fc_frontend_login" value="true" {if $FRONTEND_LOGIN} checked="checked"{/if}/>
			</div>

			{if $DISPLAY_ADVANCED}
			<div class="pre_4 g_9">
				<label for="fc_smart_login">{translate('Smart login')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="smart_login" id="fc_smart_login" value="true" {if $SMART_LOGIN} checked="checked"{/if}/>
			</div>
			{else}
				<input type="hidden" name="smart_login" value="{if $SMART_LOGIN}true{else}false{/if}" />
			{/if}

			<div class="pre_4 g_9">
				<label for="fc_home_folders">{translate('Personal folders')}</label>
				<input type="checkbox" class="fc_checkbox_jq" name="home_folders" id="fc_home_folders" value="true" {if $HOME_FOLDERS} checked="checked"{/if}/>
			</div>
			<div class="clear sp_clear"></div>
		</div>
	
		<div id="fc_TIME_LANGUAGE" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_default_language" class="g_7">{translate('Language')}:</label>
			<select class="g_6" name="default_language" id="fc_default_language">
				{foreach $languages language}
				<option value="{$language.CODE}"{if $language.SELECTED} selected="selected"{/if}>{$language.NAME} ({$language.CODE})</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			{if $DISPLAY_ADVANCED}
			<label for="fc_default_charset" class="g_7">{translate('Charset')}:</label>
			<select class="g_6" name="default_charset" id="fc_default_charset">
				<option value="">{translate('Please select')}...</option>
				{foreach $charsets charset}
				<option value="{$charset.VALUE}"{if $charset.SELECTED} selected="selected"{/if}>{$charset.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>
			{else}
				<input type="hidden" name="default_charset" value="{$DEFAULT_CHARSET}" />
			{/if}

			<label for="fc_default_timezone_string" class="g_7">{translate('Timezone')}:</label>
			<select class="g_6" name="default_timezone_string" id="fc_default_timezone_string">
				<option value="0">{translate('Please select')}...</option>
				{foreach $timezones timezone}
				<option {if $timezone.SELECTED} selected="selected"{/if}>{$timezone.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_default_date_format" class="g_7">{translate('Date format')}:</label>
			<select class="g_6" name="default_date_format" id="fc_default_date_format">
				<option value="M d Y">{translate('Please select')}...</option>
				{foreach $dateformats dateformat}
				<option value="{$dateformat.VALUE}"{if $dateformat.SELECTED} selected="selected"{/if}>{$dateformat.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>

			<label for="fc_default_time_format" class="g_7">{translate('Time format')}:</label>
			<select class="g_6" name="default_time_format" id="fc_default_time_format">
				<option value="g:i A">{translate('Please select')}...</option>
				{foreach $timeformats timeformat}
				<option value="{$timeformat.VALUE}"{if $timeformat.SELECTED} selected="selected"{/if}>{$timeformat.NAME}</option>
				{/foreach}
			</select>
			<div class="clear sp_clear"></div>
		</div>


		<div id="fc_SEARCHING" class="fc_form_content fc_list_forms ui-corner-top">
			<div class="clear sp_clear"></div>
			<label for="fc_search" class="g_6">{translate('Visibility')}:</label>
			<div class="g_5">
				<select class="g_3" name="search" id="fc_search">
					<option value="public"{if $SEARCH == 'public'} selected="selected"{/if}>{translate('Public')}</option>
					<option value="private"{if $SEARCH == 'private'} selected="selected"{/if}>{translate('Private')}</option>
					<option value="registered"{if $SEARCH == 'registered'} selected="selected"{/if}>{translate('Registered')}</option>
					<option value="none"{if $SEARCH == 'none'} selected="selected"{/if}>{translate('None')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

			{if $DISPLAY_ADVANCED}
			<label for="fc_search_cfg_search_library" class="g_6">{translate('Search library')}:</label>
			<input type="text" name="search_cfg_search_library" id="fc_search_library" class="g_9" value="{$search.cfg_search_library}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_template" class="g_6">{translate('Standard page: Template for search result')}:</label>
			<div class="g_5">
				<select class="g_6" name="search_template" id="fc_search_template">
					{foreach $search_templates search_template}
					<option value="{$search_template.VALUE}"{if $search_template.SELECTED} selected="selected"{/if}>{$search_template.NAME}</option>
					{/foreach}
				</select>
			</div>
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_search_use_page_id" class="g_6">{translate('Individual page: PAGE_ID for search result')}:</label>
			<input type="text" name="search_cfg_search_use_page_id" id="fc_search_cfg_search_use_page_id" class="g_9" value="{$search.cfg_search_use_page_id}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_search_droplep" class="g_6">{translate('Individual page: DropLEP for search result')}:</label>
			<input type="text" name="search_cfg_search_droplep" id="fc_search_cfg_search_droplep" class="g_9" value="{$search.cfg_search_droplep}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_search_images" class="g_6">{translate('Search for images')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_search_images" id="fc_search_cfg_search_images">
					<option value="true"{if $search.cfg_search_images == 'true'} selected="selected"{/if}>{translate('Yes')}</option>
					<option value="false"{if $search.cfg_search_images == 'false'} selected="selected"{/if}>{translate('No')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_content_image" class="g_6">{translate('Use image from content page in search result')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_content_image" id="fc_searchcfg_content_image">
					<option value="none"{if $search.cfg_content_image == 'none'} selected="selected"{/if}>{translate('None')}</option>
					<option value="first"{if $search.cfg_content_image == 'first'} selected="selected"{/if}>{translate('First')}</option>
					<option value="last"{if $search.cfg_content_image == 'last'} selected="selected"{/if}>{translate('Last')}</option>
					<option value="random"{if $search.cfg_content_image == 'random'} selected="selected"{/if}>{translate('Random')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_thumbs_width" class="g_6">{translate('Max. width/height of images in search result')}:</label>
			<input type="text" name="search_cfg_thumbs_width" id="fc_search_cfg_thumbs_width" class="g_9" value="{$search.cfg_thumbs_width}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_search_description" class="g_6">{translate('Search for page descriptions')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_search_description" id="fc_search_cfg_search_description">
					<option value="true"{if $search.cfg_search_description == 'true'} selected="selected"{/if}>{translate('Yes')}</option>
					<option value="false"{if $search.cfg_search_description == 'false'} selected="selected"{/if}>{translate('No')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

			<label for="fc_search_cfg_show_description" class="g_6">{translate('Show page description in search result')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_show_description" id="fc_search_cfg_show_description">
					<option value="true"{if $search.cfg_show_description == 'true'} selected="selected"{/if}>{translate('Yes')}</option>
					<option value="false"{if $search.cfg_show_description == 'false'} selected="selected"{/if}>{translate('No')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

      <label for="fc_search_cfg_search_keywords" class="g_6">{translate('Search for page keywords')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_search_keywords" id="fc_search_cfg_search_keywords">
					<option value="true"{if $search.cfg_search_keywords == 'true'} selected="selected"{/if}>{translate('Yes')}</option>
					<option value="false"{if $search.cfg_search_keywords == 'false'} selected="selected"{/if}>{translate('No')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

      <label for="fc_search_cfg_search_non_public_content" class="g_6">{translate('Search in non-public content')}:</label>
			<div class="g_5">
				<select class="g_3" name="search_cfg_search_non_public_content" id="fc_search_cfg_search_non_public_content">
					<option value="true"{if $search.cfg_search_non_public_content == 'true'} selected="selected"{/if}>{translate('Yes')}</option>
					<option value="false"{if $search.cfg_search_non_public_content == 'false'} selected="selected"{/if}>{translate('No')}</option>
				</select>
			</div>
			<div class="clear sp_clear"></div>

      <label for="fc_search_cfg_link_non_public_content" class="g_6">{translate('Redirect link (URL) for non-public content')}:</label>
			<input type="text" name="search_cfg_link_non_public_content" id="fc_search_cfg_non_public_content" class="g_9" value="{$search.cfg_link_non_public_content}" />
			<div class="clear sp_clear"></div>

      <label for="fc_search_module_order" class="g_6">{translate('Module-order for searching')}:</label>
			<input type="text" name="search_module_order" id="fc_search_module_order" class="g_9" value="{$search.module_order}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_max_excerpt" class="g_6">{translate('Max lines of excerpt')}:</label>
			<input type="text" name="search_max_excerpt" id="fc_search_max_excerpt" class="g_9" value="{$search.max_excerpt}" />
			<div class="clear sp_clear"></div>

			<label for="fc_search_time_limit" class="g_6">{translate('Max time to gather excerpts per module')}:</label>
			<input type="text" name="search_time_limit" id="fc_search_time_limit" class="g_9" value="{$search.time_limit}" />
			{else}
        <input type="hidden" name="search_template" value="{$search_template.VALUE}" />				
        <input type="hidden" name="search_cfg_content_image" value="{$search.cfg_content_image}" />
